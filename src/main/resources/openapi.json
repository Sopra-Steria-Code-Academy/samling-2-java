{
  "openapi": "3.0.3",
  "info": {
    "description": "CodeAcademy API",
    "version": "0.0.1",
    "title": "CodeAcademy API"
  },
  "servers": [
    {
      "url": "/",
      "description": "MyServer"
    }
  ],
  "paths": {
    "/chat": {
      "get":{
        "operationId": "getChats",
        "summary": "List all chats",
        "tags": ["chat"],
        "responses": {
          "200": {
            "description": "List of chats",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ChatMessageDTO"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Not ok"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChatMessageDTO": {
        "type": "object",
        "properties": {
          "author": {
            "type": "string",
            "example": "Mozart"
          },
          "message": {
            "type": "string",
            "example": "Er dritings"
          },
          "messageTime": {
            "type": "string",
            "example": "2024-01-01T00:00:00Z"
          }
        }
      }
    }
  }
}